---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  date?: Date;
  tags?: string[];
  category?: string;
}

const { title, description, date, tags, category } = Astro.props;
---

<Base title={title} description={description}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 py-12 md:py-20">
    <header class="mb-10">
      <div class="flex items-center gap-3 mb-4 text-sm text-zinc-500">
        {category && (
          <span class="px-2.5 py-0.5 bg-accent/10 text-accent rounded-full text-xs font-medium uppercase tracking-wider">
            {category}
          </span>
        )}
        {date && (
          <time datetime={date.toISOString()}>
            {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        )}
      </div>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-zinc-100 leading-tight mb-4">
        {title}
      </h1>
      <p class="text-lg text-zinc-400">{description}</p>
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map((tag) => (
            <span class="text-xs px-2 py-1 bg-surface-3 text-zinc-400 rounded">
              {tag}
            </span>
          ))}
        </div>
      )}
      <div class="h-px bg-gradient-to-r from-transparent via-surface-4 to-transparent mt-8"></div>
    </header>
    <div class="prose prose-invert">
      <slot />
    </div>
  </article>
</Base>
