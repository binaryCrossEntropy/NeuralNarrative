---
const currentPath = Astro.url.pathname;

const links = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/#projects', label: 'Projects' },
  { href: '/#contact', label: 'Contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-surface-3/50 bg-surface-0/80 backdrop-blur-xl">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 text-zinc-100 hover:text-white no-underline">
      <span class="text-lg font-semibold tracking-tight">Neural<span class="text-accent">Narrative</span></span>
    </a>

    <div class="flex items-center gap-6">
      <div class="hidden sm:flex items-center gap-1">
        {links.map(({ href, label }) => (
          <a
            href={href}
            class:list={[
              'px-3 py-1.5 rounded-md text-sm transition-colors no-underline',
              currentPath === href || (href !== '/' && currentPath.startsWith(href))
                ? 'text-accent bg-accent/10'
                : 'text-zinc-400 hover:text-zinc-100 hover:bg-surface-2',
            ]}
          >
            {label}
          </a>
        ))}
      </div>

      <a
        href="https://github.com/iqbalamo93"
        target="_blank"
        rel="noopener noreferrer"
        class="text-zinc-500 hover:text-zinc-100 transition-colors"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="sm:hidden text-zinc-400 hover:text-zinc-100"
        aria-label="Toggle menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="sm:hidden hidden border-t border-surface-3 bg-surface-0/95 backdrop-blur-xl">
    <div class="px-4 py-3 space-y-1">
      {links.map(({ href, label }) => (
        <a
          href={href}
          class:list={[
            'block px-3 py-2 rounded-md text-sm no-underline',
            currentPath === href || (href !== '/' && currentPath.startsWith(href))
              ? 'text-accent bg-accent/10'
              : 'text-zinc-400 hover:text-zinc-100 hover:bg-surface-2',
          ]}
        >
          {label}
        </a>
      ))}
    </div>
  </div>
</nav>

<div class="h-16"></div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
